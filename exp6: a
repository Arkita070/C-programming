#include<stdio.h>
int main(){
int n,max,index;
printf("Enter the number of elements:");
scanf("%d",&n);
int arr[n];
printf("Enter %d elements:\n",n);
for(int i = 0; i < n; i++){
    scanf("%d",&arr[i]);
    max = arr[0];
    index = 0;
}
for(int i = 1; i < n; i++){
    if(arr[i] > max){
        max = arr[i];
        index = i;
    }
}
printf("Maximun element:%d\n",max);
printf("Index of maximum element:%d\n",index);
 return 0;
}
